<div class="posts-wrapper row">
  <div class="post">
    <div class="post-head">
      <div class="name">
        <%= @post.user.name %><br>
      </div>
    </div>
    <div class="image center-block">
      <%= image_tag @post.image.url(:medium) %>
    </div>
    <p class="caption">
      <%= @post.description %>
    </p>
    <div class="text-center">
      <%= link_to "Back", root_path %>
    </div>
  </div>
</div>
